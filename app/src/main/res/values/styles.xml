<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/defaultBackground</item>
        <item name="colorPrimary">@color/defaultBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="whiteTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="bigWhiteTExtStyle" parent="whiteTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="smallWhiteTExtStyle" parent="whiteTextStyle">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
