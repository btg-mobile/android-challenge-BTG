<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="imageTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:transitionName">tImage</item>
    </style>

    <style name="textItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="android:transitionName">tName</item>
    </style>

    <style name="imageTransition">
        <item name="android:transitionName">tImage</item>
    </style>

    <style name="textTransition">
        <item name="android:transitionName">tName</item>
    </style>
</resources>