<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<!--   Poster;-->
<!--   Botão para favoritar/desfavoritar;-->
<!--   Título;-->
<!--   Sinopse;-->
<!--   Nota do filme;-->
<!--   E os gêneros por extenso.-->
<ImageView
    android:id="@+id/movie_detail_image"
    android:layout_width="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/movie_detail_name"
       android:text="HELOO"
       app:layout_constraintTop_toBottomOf="@+id/movie_detail_image"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/movie_detail_description"
       android:text="HELOO"
       android:layout_gravity="center"
       app:layout_constraintTop_toBottomOf="@+id/movie_detail_name"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/movie_detail_score"
       android:text="HELOO"
       android:layout_gravity="center"
       app:layout_constraintTop_toBottomOf="@+id/movie_detail_description"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/movie_detail_genre"
       android:layout_gravity="center"
       app:layout_constraintTop_toBottomOf="@+id/movie_detail_score"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <CheckBox
       android:id="@+id/button_movie_detail_fav"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="favorite"
       app:layout_constraintTop_toBottomOf="@+id/movie_detail_genre"
       app:layout_constraintStart_toStartOf="parent"/>

   <Button
       android:id="@+id/button_back"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:text="back"
       app:layout_constraintStart_toEndOf="@+id/button_movie_detail_fav"
       app:layout_constraintTop_toBottomOf="@+id/movie_detail_genre" />

</androidx.constraintlayout.widget.ConstraintLayout>