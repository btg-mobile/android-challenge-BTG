<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_movie_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/card_repo_outer_side_padding"
    android:layout_marginEnd="@dimen/card_repo_outer_side_padding"
    android:layout_marginTop="@dimen/card_repo_outer_top_bottom_padding"
    android:layout_marginBottom="@dimen/card_repo_outer_top_bottom_padding"
    tools:background="@android:color/holo_red_light">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_movie_item_inner_margin">

        <ImageView
            android:id="@+id/prompt_img_cover"
            android:layout_width="@dimen/card_movie_item_prompt_cover_width"
            android:layout_height="@dimen/card_movie_item_prompt_cover_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:background="@android:color/holo_blue_light"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/card_movie_item_info_container_margin"
            app:layout_constraintLeft_toRightOf="@id/prompt_img_cover"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/prompt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?attr/textAppearanceBody1"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="Liga da Justiça - Final War"/>

            <TextView
                android:id="@+id/prompt_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/prompt_title"
                tools:text="(2000)"/>

            <!--<TextView
                android:id="@+id/prompt_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/prompt_title"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="ação"/>

            <TextView
                android:id="@+id/prompt_vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="9.9"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>